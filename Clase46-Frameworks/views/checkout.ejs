<!DOCTYPE html>
<html lang="es">
  <%- include("dashboard") %>
  <title>Dashboard - APP</title>
  <body>
    <% if( typeof(products) !=="undefined") { %>
      <div class="cart-container container-lg">
        <% products.forEach(function(product) {%>
        <div class="cart-item">
          <img src="<%=product.img %>" alt="Imagen Producto" />
          <span> <%=product.name %> </span>
          <span> <%=product.price %> </span>
        </div>
        <%});%>
      </div>
      <% } else{ %>
      <h5 class="container">No hay productos agregados</h5>
      <% } %>

      <form class="checkout-buttons-container" action="/cart/succes" method="post">
        <button class="btn-checkout" onclick="location.href='/'" type="reset">Volver</button>
        <button class="btn-checkout" type="submit">Comprar</button>
        <button class="btn-checkout cancel" onclick="location.href='/cart/delete'" type="reset">Cancelar</button>
      </div>
  </body>
</html>
