<div class='encabezado-form container'>
  <h3>Agregar Productos</h3>
  {{#if data}}
  <div id="userContainer">
    <button onclick="location.href='/logout'">LOGOUT</button>
    <p id="parrafoLogin"> Bienvenido {{data.nombre}}, usted ha visitado el sitio {{data.visitas}} veces</p>
  </div>
  {{else}}
    {{#if dataLogout}}
      <form action="/login" method="post" autocomplete="off" id="formLogin">
        <input id="nombre" type="text" name="nombre">
        <input type="submit" value="LOGIN">
      </form>
      <p id="parrafoLogin"> Hasta luego {{dataLogout}}</p>
    {{else}}
    <form action="/login" method="post" autocomplete="off" id="formLogin">
        <input id="nombre" type="text" name="nombre">
        <input type="submit" value="LOGIN">
    </form>
    {{/if}}
  {{/if}}
</div>

<form action='' id='form'>
  <div class='form-group'>
    <label for='input-name' class='col-lg-2'>Nombre</label>
    <div class='col-lg-5'>
      <input
        type='text'
        class='form-control'
        id='input-name'
        placeholder='Nombre del producto...'
        name='name'
      />
    </div>
  </div>
  <div class='form-group'>
    <label for='input-price' class='col-lg-2'>Precio</label>
    <div class='col-lg-5'>
      <input
        type='number'
        class='form-control'
        id='input-price'
        placeholder='Precio del producto...'
        name='price'
      />
    </div>
  </div>
  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <input type='submit' class='btn btn-success' value='Enviar' />
      <input type='reset' class='btn btn-secondary' value='Reset' />
    </div>
  </div>
</form>

<div id='tableProducts' class='container'></div>


<div class'message-container' >
  <h3 class='container'>Centro de Mensajes</h3>

  <form action='' id='formMsg' class='form-block'>
    <div class='form-group'>
      <div class='col-lg-2'>
        <input
          type='text'
          class='form-control'
          id='input-userName'
          placeholder='Nombre...'
          name='userName'
        />
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-2'>
        <input
          type='text'
          class='form-control'
          id='input-lastName'
          placeholder='Apellido...'
          name='lastName'
        />
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-1'>
        <input
          type='number'
          class='form-control'
          id='input-age'
          placeholder='Edad...'
          name='age'
        />
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-2'>
        <input
          type='text'
          class='form-control'
          id='input-alias'
          placeholder='Alias...'
          name='alias'
        />
      </div>
    </div>
    
    <div class='form-group'>
      <div class='col-lg-3'>
        <input
          type='text'
          class='form-control'
          id='input-message'
          placeholder='Mensaje...'
          name='message'
        />
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-offset-2 col-lg-10'>
        <input type='submit' class='btn btn-success' value='Enviar' />
      </div>
    </div>
  </form>

<div id='containerMessages' class='container'></div>