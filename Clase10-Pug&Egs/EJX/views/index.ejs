<!DOCTYPE html>
<html lang="es">
  <%- include("template/head") %>
  <body>
    <div class="encabezado-form container-lg">
      <h3>Agregar Productos</h3>
    </div>

    <form action="/api/products/add" method="POST">
      <div class="form-group">
        <label for="input-name" class="col-lg-2">Nombre</label>
        <div class="col-lg-5">
          <input
            type="text"
            class="form-control"
            id="input-name"
            placeholder="Nombre del producto"
            name="name"
          />
        </div>
      </div>
      <div class="form-group">
        <label for="input-price" class="col-lg-2">Precio</label>
        <div class="col-lg-5">
          <input
            type="number"
            class="form-control"
            id="input-price"
            placeholder="Precio del producto"
            name="price"
          />
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
          <button type="submit" class="btn btn-success">Enviar</button>
          <button type="reset" class="btn btn-secondary">Resetear</button>
          <a href="./api/products/" class="btn btn-danger"> Ver Productos </a>
        </div>
      </div>
    </form>
  </body>
</html>
