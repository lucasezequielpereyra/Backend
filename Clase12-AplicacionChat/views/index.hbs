<div class='encabezado-form container-lg'>
  <h3>Agregar Productos</h3>
</div>

<form action='' id='form'>
  <div class='form-group'>
    <label for='input-name' class='col-lg-2'>Nombre</label>
    <div class='col-lg-5'>
      <input
        type='text'
        class='form-control'
        id='input-name'
        placeholder='Nombre del producto...'
        name='name'
      />
    </div>
  </div>
  <div class='form-group'>
    <label for='input-price' class='col-lg-2'>Precio</label>
    <div class='col-lg-5'>
      <input
        type='number'
        class='form-control'
        id='input-price'
        placeholder='Precio del producto...'
        name='price'
      />
    </div>
  </div>
  <div class='form-group'>
    <div class='col-lg-offset-2 col-lg-10'>
      <input type='submit' class='btn btn-success' value='Enviar' />
      <input type='reset' class='btn btn-secondary' value='Reset' />
    </div>
  </div>
</form>

<div id='tableProducts' class='container-lg'></div>

<div class'message-container' >
  <h3 class='container-lg'>Centro de Mensajes</h3>

  <form action='' id='formMsg' class='form-inline'>
    <div class='form-group'>
      <div class='col-lg-2'>
        <input
          type='email'
          class='form-control'
          id='input-email'
          placeholder='Ingrese su correo...'
          name='email'
        />
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-3'>
        <input
          type='text'
          class='form-control'
          id='input-msg'
          placeholder='Ingrese su mensaje...'
          name='name'
        />
      </div>
    </div>

    <div class='form-group'>
      <div class='col-lg-offset-2 col-lg-10'>
        <input type='submit' class='btn btn-success' value='Enviar' />
      </div>
    </div>
  </form>

<div id='containerMessages' class='container-lg'></div>